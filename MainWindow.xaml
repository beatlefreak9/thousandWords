        <Label Content="Choose an image:" Height="34" HorizontalAlignment="Left" Margin="12,12,0,0" Name="label1" VerticalAlignment="Top" FontSize="16" FontStyle="Normal" FontWeight="Medium" />
        <Label Content="Now enter a few words to describe that image:" Height="31" HorizontalAlignment="Left" Margin="24,226,0,0" Name="label2" VerticalAlignment="Top" Width="407" FontSize="16" FontWeight="Medium" />
        <Image Height="168" HorizontalAlignment="Center" Margin="12,52,0,0" Name="image1" Stretch="Uniform" VerticalAlignment="Top" Width="407" />
        <Button Content="Browse" Height="23" HorizontalAlignment="Left" Margin="157,18,0,0" Name="button1" VerticalAlignment="Top" Width="75" Click="button1_Click" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="12,263,0,0" Name="textBox1" VerticalAlignment="Top" Width="407" Text="" />
        <Button Content="Go Time!" Height="37" HorizontalAlignment="Left" Margin="126,292,0,0" Name="button2" VerticalAlignment="Top" Width="185" Click="button2_Click" />
    </Grid>
</Window>
